---
interface Props {
    text?: string,
    href: string,
    target?: string;
}

const { text="", href, target="" } = Astro.props;
---

<a href={href} target={target} class="relative before:absolute before:bottom-0 before:left-0 before:top-0 before:z-0 before:h-full before:w-0 before:bg-red-200 before:transition-all before:duration-300 hover:before:left-0 hover:before:w-full cursor-pointer border-b-4 border-r-4 border-black bg-white px-4 py-2 flex w-fit">
    <span class="z-10 flex items-center gap-2">
        <slot name="before" />
        {
            text ?
            <span class="font-semibold">{text}</span>
            : ''
        }
        <slot name="after" />
    </span>
</a>