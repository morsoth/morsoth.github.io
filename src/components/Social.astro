---
interface Props {
    text: string,
    href: string,
    target?: string,
    color?: string;
}

const { text, href, target="", color="rgb(0, 0, 0)" } = Astro.props;
---

<a href={href} target={target} class="transition-all duration-300 cursor-pointer border-2 border-red-200 bg-white px-6 py-4 flex w-fit">
    <span class="z-10 flex items-center gap-3">
        <slot name="before" />
        <span class="font-semibold">{text}</span>
        <slot name="after" />
    </span>
</a>

<style define:vars={{color}}>
    a:hover {
        border-color: var(--color);
    }
    span {
        color: var(--color);
    }
</style>