---
interface Props {
    name: string,
    icon: string;
}

const { name, icon } = Astro.props;
---

<div class="border-0 border-stone-200 flex flex-col items-center justify-between gap-2 h-24">
    <img src={icon} alt="" class="h-16">
    <span class="font-semibold text-xs text-center">{name}</span>
</div>