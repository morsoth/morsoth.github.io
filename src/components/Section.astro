---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<section class="w-full flex flex-col">
    <div class="w-full flex border-black border-b-4">
        <h2 class="border-black border-x-4 border-t-4 px-6 py-4 text-xl">{title}</h2>
    </div>
    <div class="w-full">
        <slot />
    </div>
</section>