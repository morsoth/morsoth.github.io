---
interface Props {
	title: string;
}

const { title } = Astro.props;
const id = title.toLowerCase().replace(" ", "-");
---

<section class="w-full flex flex-col pt-4" id={id}>
    <header class="w-full flex border-black border-b-4">
        <h2 class="px-6 py-4 text-xl text-red-400 font-semibold">
            {title}
            <slot name="icon"/>
        </h2>
    </header>
    <div class="w-full">
        <slot />
    </div>
</section>